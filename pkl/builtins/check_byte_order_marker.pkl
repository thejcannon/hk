import "../Config.pkl"

check_byte_order_marker = new Config.Step {
  category = "Special Purpose"
  description = "Detect UTF-8 BOM"
  glob = "**/*"
  check = "hk util check-byte-order-marker {{files}}"
  tests {
    ["detects BOM"] {
      run = "check"
      write {
        ["{{tmp}}/with_bom.txt"] = "\u{FEFF}Hello, world!"
      }
      files = List("{{tmp}}/with_bom.txt")
      expect { code = 1 }
    }
    ["passes without BOM"] {
      run = "check"
      write {
        ["{{tmp}}/without_bom.txt"] = "Hello, world!"
      }
      files = List("{{tmp}}/without_bom.txt")
      expect { code = 0 }
    }
    ["passes empty file"] {
      run = "check"
      write {
        ["{{tmp}}/empty.txt"] = ""
      }
      files = List("{{tmp}}/empty.txt")
      expect { code = 0 }
    }
  }
}
