import "../Config.pkl"

ruff_format = new Config.Step {
  category = "Python"
  description = "Fast Python formatter (part of ruff)"
  glob = List("**/*.py", "**/*.pyi")
  stage = "<JOB_FILES>"
  check = "ruff format --force-exclude --check {{ files }}"
  check_diff = "ruff format --force-exclude --diff {{ files }}"
  fix = "ruff format --force-exclude {{ files }}"
  tests {
    ["detects unformatted code"] {
      run = "check"
      write { ["{{tmp}}/test.py"] = "x=1+2\n" }
      files = List("{{tmp}}/test.py")
      expect { code = 1 }
    }
    ["formats code"] {
      run = "fix"
      write { ["{{tmp}}/test.py"] = "x=1+2\n" }
      files = List("{{tmp}}/test.py")
      expect {
        code = 0
        files { ["{{tmp}}/test.py"] = "x = 1 + 2\n" }
      }
    }
    ["passes formatted code"] {
      run = "check"
      write { ["{{tmp}}/test.py"] = "x = 1 + 2\n" }
      files = List("{{tmp}}/test.py")
      expect { code = 0 }
    }
    ["check respects config exclude"] {
      run = "check"
      write {
        ["{{tmp}}/test.py"] = "x=1+2\n"
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      files = List("{{tmp}}/test.py")
      expect { code = 0 }
    }
    ["fix respects config exclude"] {
      run = "fix"
      write {
        ["{{tmp}}/test.py"] = "x=1+2\n"
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      files = List("{{tmp}}/test.py")
      expect {
        code = 0
        files { ["{{tmp}}/test.py"] = "x=1+2\n" }
      }
    }
  }
}
