import "../Config.pkl"

taplo_format = new Config.Step {
  category = "Data Formats"
  description = "TOML formatter"
  glob = "**/*.toml"
  stage = "<JOB_FILES>"
  check = "taplo format --check {{ files }}"
  check_diff = "taplo format --check --diff {{ files }}"
  fix = "taplo format {{ files }}"
  tests {
    local const bad = "[table]\nkey  =  \"value\"\n"
    local const good = "[table]\nkey = \"value\"\n"
    ["check bad file"] {
      run = "check"
      write { ["{{tmp}}/file.toml"] = bad }
      files = List("{{tmp}}/file.toml")
      expect { code = 1 }
    }
    ["check good file"] {
      run = "check"
      write { ["{{tmp}}/file.toml"] = good }
      files = List("{{tmp}}/file.toml")
      expect { code = 0 }
    }
    ["fix bad file"] {
      run = "fix"
      write { ["{{tmp}}/file.toml"] = bad }
      files = List("{{tmp}}/file.toml")
      expect {
        files { ["{{tmp}}/file.toml"] = good }
        code = 0
      }
    }
    ["fix good file"] {
      run = "fix"
      write { ["{{tmp}}/file.toml"] = good }
      files = List("{{tmp}}/file.toml")
      expect {
        files { ["{{tmp}}/file.toml"] = good }
        code = 0
      }
    }
  }
}
